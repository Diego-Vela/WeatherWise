# Ignore node_modules for both frontend (app) and backend (server)
app/node_modules/
server/node_modules/

# Ignore build directories (for compiled or bundled files)
app/build/
app/dist/
server/build/
server/dist/

# Ignore environment variable files (for sensitive data)
app/.env
server/.env

# Ignore log files
app/logs/
server/logs/
*.log

# Ignore coverage reports generated by testing tools
app/coverage/
server/coverage/

# Ignore temporary files and directories (OS, editors, etc.)
.DS_Store        # macOS specific
Thumbs.db        # Windows specific
*.swp            # vi/vim swap files
.idea/           # JetBrains IDEs (WebStorm, IntelliJ, etc.)
.vscode/         # Visual Studio Code settings

# Ignore npm-debug files
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# Ignore frontend specific build artifact files
app/.next/       # Next.js (if you're using Next.js)
app/.nuxt/       # Nuxt.js (if you're using Nuxt.js)
app/out/         # Next.js static export (if applicable)
app/.parcel-cache/ # Parcel.js cache

# Ignore server specific files
server/.eslintcache
server/.nyc_output # Coverage output for testing tools like NYC
server/tmp/         # Temporary files for the backend

# Ignore potential Docker artifacts
docker-compose.yml
docker-compose.override.yml
Dockerfile

# Ignore TypeScript build artifacts (if applicable)
app/**/*.tsbuildinfo
server/**/*.tsbuildinfo

# Ignore Git-ignored submodules (if applicable)
.git/modules/
